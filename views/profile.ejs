    <div class="modal-dialog text-center">
        <div class="col-sm-10 main-section">
            <div class="modal-content">

                <div class="col-12 user-img">
                    <img src="img/vrt-touch-logo-small.png" />
                </div>

                <form class="col-12" action="/profile" method="POST">
                    <div class="col-10 form-group user">
                        <input type="name" id="name" name="name" required class="form-control" placeholder="Voer naam in" value="<%= user.name %>"/>
                    </div>
                    <div class="col-10 form-group email">
                        <input type="email" id="username" name="username" class="form-control" value="<%= user.username %>" readonly />
                    </div>
                    <div class="col-10 form-group password">
                        <input type="password" id="password" name="password" required class="form-control" placeholder="Huidig paswoord" />
                    </div>
                    <div class="col-10 form-group password">
                        <input type="password" id="passwordNew1" name="passwordNew1" class="form-control" placeholder="Nieuw paswoord" />
                    </div>
                    <div class="col-10 form-group password">
                        <input type="password" id="passwordNew2" name="passwordNew2" class="form-control" placeholder="Nieuw paswoord" />
                    </div>
                    <% if (errorMessage) { %>
                    <div class="help-block message">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                    <div class="button-box col-lg-12">
                        <button type="submit" class="btn btn-info"><i class="fas fa-save"></i>&nbsp;Bewaar</button>
                        <a href="/" type="cancel" class="btn btn-info"><i class="fas fa-window-close"></i>&nbsp;Annuleer</a>
                    </div>
                </form>
            </div> <!-- End of Modal Content -->
        </div>
    </div>
